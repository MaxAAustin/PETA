<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxaaustin.peta.MainActivity">


    <FrameLayout
        android:layout_width="192dp"
        android:layout_height="172dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="profile pic test of senior man"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/senior_man"
            tools:ignore="HardcodedText"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/host_image_button"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/grapeshdpi"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/userName"/>

    <ImageButton
        android:id="@+id/guest_image_button"
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/avocadohdpi"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="This Guy"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/guest_image_button"
        android:layout_marginBottom="4dp"/>
</android.support.constraint.ConstraintLayout>
